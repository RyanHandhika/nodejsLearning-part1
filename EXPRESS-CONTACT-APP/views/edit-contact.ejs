<h1>Ubah Kontak</h1>

<% if (typeof errors != "undefined") { %>
<div class="alert alert-danger" role="alert">
  <ul>
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>

<form action="/contact/update" method="post">
  <input
    type="hidden"
    name="oldName"
    value="<%= (contact.oldName) ? contact.oldName : contact.name  %>"
  />
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      name="name"
      id="name"
      value="<%= contact.name  %>"
    />
    <br />
    <label for="email" class="form-label">Email Address</label>
    <input
      type="email"
      class="form-control"
      name="email"
      id="email"
      value="<%= contact.email  %>"
    />
    <br />
    <label for="noHP" class="form-label">Phone Number</label>
    <input
      type="text"
      class="form-control"
      name="noHP"
      id="noHP"
      value="<%= contact.noHP  %>"
    />
    <br />
  </div>

  <button type="submit" class="btn btn-primary">Ubah</button>
</form>
