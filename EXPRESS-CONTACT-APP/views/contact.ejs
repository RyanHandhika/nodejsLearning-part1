<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>Daftar Kontak :</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.name %></td>
            <td><%= contact.noHP %></td>
            <td>
              <a
                href="/contact/<%= contact.name %>"
                class="btn btn-primary badge rounded-pill"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
